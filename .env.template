# JIRA Configuration Template
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env file to version control!

# JIRA Instance URL
JIRA_URL=https://jira-sd.mc1.oracleiaas.com

# Your JIRA username/email
JIRA_USERNAME=your.email@oracle.com

# Your JIRA API token
# Generate at: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=your_api_token_here

# Optional: Maximum number of results to fetch (default: 100)
MAX_RESULTS=100

# Optional: JQL Query to filter JIRA issues
# Default: ExaInfra and ExaCS patching failures from last 3 days
# JQL_QUERY=text ~ metricsV2.EXADATA.dbaas.patchCloudExaInfra.APPLY.WORKER.Failure AND labels in (oneview_triagex_started,oneview_triagex_success,oneview_triagex_failed) AND created >= -3d ORDER BY created DESC
JQL_QUERY=(text ~ metricsV2.EXADATA.dbaas.patchCloudExaInfra.APPLY.WORKER.Failure OR text ~ metricsV2.EXADATA.dbaas.patchExacs.APPLY.WORKER.Failure) AND labels in (oneview_triagex_started,oneview_triagex_success,oneview_triagex_failed) AND created >= -3d ORDER BY created DESC

# Email Configuration (optional - if not set, email will be skipped)
# SMTP server hostname (plain SMTP on port 25, no TLS, no authentication)
EMAIL_SMTP_SERVER=internal-mail-router.oracle.com

# Sender email address
EMAIL_FROM=jyotirdipta.das@oracle.com

# Comma-separated list of recipient email addresses
EMAIL_TO=jyotirdipta.das@oracle.com,lata.kannan@oracle.com

# Email subject line (defaults to 'JIRA Status Report' if not set)
EMAIL_SUBJECT=TriageX JIRA Analysis Report
